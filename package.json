  "scripts": {
    "prebuild": "npx rimraf dist",
    "build": "npx nest build",
    "format": "npx prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "maintenance": "cp node_helper/http-module.d.ts node_modules/@sentry/node/dist/transports/base/http-module.d.ts; cp node_helper/SocketModeClient.d.ts node_modules/@slack/socket-mode/dist/SocketModeClient.d.ts",
    "start": "npx nest start",
    "start:dev": "npx nest start --watch",
    "start:debug": "npx nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
